<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.workouts.WorkoutsFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="76dp"
        android:clickable="true"
        android:onClick="addExercise"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/spinnerSortCategory"
        android:layout_width="730dp"
        android:layout_height="62dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="550dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvExerciseList"
        android:layout_width="1279dp"
        android:layout_height="477dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAddExercise"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerSortCategory" />

</androidx.constraintlayout.widget.ConstraintLayout>